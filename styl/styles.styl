							text-align: left
						.nodriza__title
							text-align: left
							span
								text-indent: -14px
		.visible
			opacity: 1
			visibility: visible
.section4
	background black
	//box-shadow 0 2px 10px rgba(black, .3)
	//height 500px
	.container
		padding-bottom 0
		width: 100%
	.commerce
		list-style-type none
		margin 2em 0 0 0
		padding 0
		.commerce__unit
			display flex
			height 345px
			width 100%
			&:hover
				.commerce__left
				.commerce__right
					background white
					.commerce__text
						opacity 1
					.commerce__logo
						top 90px
						.commerce__logo-img
							.azulasiste
								fill azulasiste
							.grisOscuro
								fill verdepet
							.naranjo__pet
								fill naranjopet
							.naranjo__toolmania
								fill #E86C16
							.rojoasiste
								fill rojoasiste
							.things__color
								fill black
							.verdePet
								fill verdepet
					.commerce__figure
						.commerce__img
							-webkit-filter grayscale(0)
			.commerce__left
			.commerce__right
				height 100%
				overflow hidden
				transition .3s
				position relative
				width 50%
				//&:hover
				.commerce__figure
					height 100%
					.background__
						&asistecar
						&petmania
						&things
						&toolmania
							//background-image url('../img/toolmania.jpg')
							background-position center
							background-size cover
						&asistecar
							background-image url('../img/asistecar.jpg')
						&petmania
							background-image url('../img/petmania.jpg')
						&things
							background-image url('../img/things.jpg')
						&toolmania
							background-image url('../img/toolmania.jpg')
					.commerce__img
						display block
						height 100%
						width 100%
						-webkit-filter grayscale(1)
				.commerce__logo
					height 100px
					left 50%
					margin-left -100px
					margin-top -50px
					position absolute
					top 50%
					transition .75s
					width 200px
					.commerce__logo-img
						margin-bottom 3em
						transition .6s
						width 100%
						.azulasiste
							fill #d1d1d1
						.grisOscuro
							fill grisOscuro
						.naranjo__pet
							fill grisOscuro
						.naranjo__toolmania
							fill #5d5d5d
						.rojoasiste
							fill #d1d1d1
						.things__color
							fill #d1d1d1
						.verdePet
							fill #d1d1d1
				.commerce__text
					left 0
					opacity 0
					padding 0 10%
					position absolute
					text-align center
					top 150px
					transition .3s
					width 100%
			&:nth-child(even)
				.commerce__left
					padding 3em
			&:nth-child(odd)
				.commerce__right
					padding 3em
